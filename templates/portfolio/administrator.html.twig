{% extends 'base.html.twig' %}

{% block body %}
    <div class="messagesContainer">
    <div class="messagesWrap">
    {% if users %}
        {% for user in users %}
            <div class="messageWrap">
                <div class = "messageName"> {{ user.username }}</div>
                <div class = "messageEmail"> {{ user.fullName }}</div>
                <div class = "messagePhoneNumber"> {{ user.email }}</div>
            </div>
        {%  endfor %}
    {% else %}
        <p>There are no users</p>
    {% endif %}
    </div>
    <div class="paginationContainer">
    {{ knp_pagination_render(users) }}
    <div/>
    <div>
{% endblock %}